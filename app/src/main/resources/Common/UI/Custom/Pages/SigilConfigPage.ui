$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@Container {
    Anchor: (Width: 480, Height: 400);

    #Title {
      Group {
        $C.@Title {
          @Text = "Sigil Configuration";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 16);

      Group #Header {
        LayoutMode: Left;
        Anchor: (Height: 32, Bottom: 12);

        Label #SigilType {
          Text: "Sigil";
          FlexWeight: 1;
          Style: (FontSize: 15, TextColor: #c7d4e0, RenderBold: true, VerticalAlignment: Center);
        }

        $C.@SmallSecondaryTextButton #ToggleMode {
          @Text = "Whitelist";
          @Anchor = (Width: 300);
        }
      }

      Group #AddItemRow {
        LayoutMode: Left;
        Anchor: (Height: 52, Bottom: 12);

        Group #HeldItemSlot {
          Anchor: (Width: 48, Height: 48);
          Background: #1a2633(0.9);
          Padding: 2;

          ItemIcon #HeldItemIcon {
            Anchor: (Width: 44, Height: 44);
          }
        }

        Group { Anchor: (Width: 8); }

        $C.@SmallSecondaryTextButton #AddHeld {
          @Text = "Add Held";
          @Anchor = (Width: 150, Height: 32);
        }

        Group { FlexWeight: 1; }

        $C.@SmallSecondaryTextButton #ClearFilters {
          @Text = "Clear All";
          @Anchor = (Width: 200, Height: 32);
        }
      }

      Label {
        Text: "Filtered Items (right-click to remove)";
        Style: (FontSize: 12, TextColor: #96a9be, RenderUppercase: true);
        Anchor: (Bottom: 6);
      }

      Group #FilterGridContainer {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        Background: #111924(0.8);
        Padding: (Full: 6);

        Group #FilterGrid {
          LayoutMode: Top;
        }
      }
    }
  }
}
